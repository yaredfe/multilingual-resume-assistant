# Multilingual Resume Screener & Interview Assistant
# Environment Configuration Example
# Copy this file to .env and modify the values as needed

# Database Configuration
CHROMA_DB_PATH=data/chroma_db

# Model Paths
SENTENCE_TRANSFORMER_MODEL=models/sentence-transformers/all-MiniLM-L6-v2
FLAN_T5_MODEL=models/flan-t5-base

# Translation Models
FRENCH_TRANSLATION_MODEL=models/opus-mt-fr-en
SPANISH_TRANSLATION_MODEL=models/opus-mt-es-en
GERMAN_TRANSLATION_MODEL=models/opus-mt-de-en

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=0

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production

# Logging
LOG_LEVEL=INFO

# Processing Settings
BATCH_SIZE=10
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Optional: Email Configuration (for future features)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Optional: Database URL (for future features)
DATABASE_URL=sqlite:///data/app.db 